{
  "compilerOptions": {
    "moduleResolution": "node16",
    "module": "node20",
    "target": "es2022",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "~~/*": ["../*"],
      "@@/*": ["../*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "log"]
}
